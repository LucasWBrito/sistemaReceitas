<!DOCTYPE html>
<html>
  <head>
    <%-include('../partials/header'); %>
  </head>
  <body>
    <div class="container">
      <%- include('../partials/navbarAdmin'); %>
      <h3>Ingredientes Cadastrados</h3>
      <br />
      <a href="/admin/novoIngrediente" class="btn btn-primary">Novo ingrediente</a>
      <a href="/admin/relatorioIngrediente" class="btn btn-primary">Ingredientes mais usados</a>
      <br /><br />
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Nome</th>
          </tr>
        </thead>
        <tbody>
          <% ingredientes.forEach(ingrediente => { %>
          <tr>
            <td><%=ingrediente.id%></td>
            <td><%=ingrediente.nome%></td>
            <td>
              <a
                href="/admin/editarIngrediente/<%=ingrediente.id%>"
                class="fas fa-edit"
                style="color: black"
                ata-toggle="tooltip"
                title="Editar ingrediente."
              ></a>
            </td>
            <td>
              <a
                href="/admin/deletarIngrediente/<%=ingrediente.id%>"
                class="fas fa-trash"
                style="color: black"
                ata-toggle="tooltip"
                title="Deletar ingrediente."
                onclick="return confirm('Confirma a exclusÃ£o?')"
              ></a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <% if(msg){ %>
    <div class="alert alert-info"><%= msg %></div>
    <% } %> <%- include('../partials/footer'); %>
  </body>
</html>
