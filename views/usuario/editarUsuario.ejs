<!DOCTYPE html>
<html>
  <head>
    <%-include('../partials/header'); %>
  </head>
  <body>
    <div class="container">
      <%-include('../partials/navbar'); %>
      <div class="card">
        <div class="card-body">
          <h3 class="card-title">Edição de Usuário</h3>
          <br />
          <form action="/editarUsuario" method="POST">
            <div class="form-group">
              <label for="nome">Nome</label>
              <input
                class="form-control"
                id="nome"
                type="text"
                name="nome"
                value="<%=usuario.nome%>"
                placeholder="Informe seu nome."
                required
              />
              <label for="login">Login</label>
              <input
                class="form-control"
                id="login"
                type="text"
                name="login"
                value="<%=usuario.login%>"
                placeholder="Informe seu login."
                required
              />
              <label for="senha">Senha</label>
              <input
                class="form-control"
                id="senha"
                type="password"
                name="senha"
                placeholder="Informe sua senha."
                required
              />
            </div>
            <input class="btn btn-primary" type="submit" value="Salvar" />
          </form>
        </div>
      </div>
      <% if(msg){ %>
      <div class="alert alert-info"><strong>Atualização!</strong> <%= msg %></div>
      <% } %>
    </div>
    <%-include('../partials/footer'); %>
  </body>
</html>
